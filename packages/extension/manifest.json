{
    "manifest_version": 2,
    "name": "AlgoSigner Demo",
    "version": "0.1",
    "icons": { 
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["http://localhost:9000/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_title": "AlgoSigner Demo",
      "default_icon": "icon.png",
      "default_popup":"popup.html"
    },
    "web_accessible_resources": ["AlgoSigner.min.js"],
    "permissions": [
        "notifications",
        "storage",
        "tabs",
        "management",
        "activeTab"
    ]
}

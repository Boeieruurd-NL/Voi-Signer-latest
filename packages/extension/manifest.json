{
    "manifest_version": 2,
    "name": "AlgoSigner",
    "author": "https://developer.purestake.io",
    "version": "0.1.0",
    "description": "Sign Algorand transactions in your browser with PureStake.",
    "icons": { 
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
      "default_title": "AlgoSigner",
      "default_icon": "icon.png",
      "default_popup":"index.html"
    },
    "web_accessible_resources": ["AlgoSigner.min.js"],
    "permissions": [
        "notifications",
        "storage",
        "tabs",
        "management",
        "activeTab"
    ]
}

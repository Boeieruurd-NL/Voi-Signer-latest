{
    "manifest_version": 2,
    "name": "AlgoSigner",
    "author": "https://developer.purestake.io",
    "version": "0.1.0",
    "description": "Sign Algorand transactions in your browser with PureStake.",
    "icons": { 
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["http://localhost:9000/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_title": "AlgoSigner",
      "default_icon": "icon.png",
      "default_popup":"index.html"
    },
    "permissions": [
        "storage"
    ]
}
